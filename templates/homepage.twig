{% extends "base/big.twig" %}

{% block class %}
t-home
{% endblock %}

{% block side %}
<div class="js-graph--stats"></div>
{% endblock %}
 
{% block content %}

	<div class="js-graph--stats"></div>


	<form method="POST" action="/">
		<p>EVs Calculator will help you keep track the training for one PoKémon.</p>

		<fieldset class="c-statfield-list">
			<legend>
				Set the targets for your training - <span class="js-evs-left">508</span> EVs left <span class="hint--bottom" data-hint="The total amount of valid Effort Values a PoKémon can have">?</span>
			</legend>
			{% for stat,name in stats %}
				<div class="c-statfield c-statfield--{{ stat }}">
					<input class="c-statfield__field js-stat" type="number" name="{{ stat }}" id="{{ stat }}_stat" step="4" min="0" max="252" pattern="[0-9]*" />
					<label class="c-statfield__label" for="{{ stat }}_stat">{{ name }}</label>
				</div>
			{% endfor %}
		</fieldset>

		<fieldset>
			<legend>Game:</legend>
			{% for game,name in games %}
				<label>
					<input type="radio" name="game" value="{{ game }}" required>
					<span>{{ name }}</span>
				</label>
			{% endfor %}
		</fieldset>

		<fieldset>
			<legend>PoKémon has Pokerus virus?</legend>
			<label>
				<input type="radio" name="pokerus" value="1" required>
				<span>Yes</span>
			</label>
			<label>
				<input type="radio" name="pokerus" value="0" required>
				<span>No</span>
			</label>
		</fieldset>

		<fieldset>
			<legend>Power items?</legend>
			<label>
				<input type="radio" name="has_power_item" value="2" required>
				<span>Macho brace and the others</span>
			</label>
			<label>
				<input type="radio" name="has_power_item" value="1" required>
				<span>Just the macho Braze</span>
			</label>
			<label>
				<input type="radio" name="has_power_item" value="0" required>
				<span>None</span>
			</label>
		</fieldset>

		<input class="c-button" type="submit" value="Start training">
		
	</form>


{% endblock %}